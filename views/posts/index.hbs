<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li class="each-post">
    <div class="image"><img src="{{this.imageUrl}}"></div>
    <div class="message">{{this.message}}</div>
    <div class="poster">Posted by {{this.poster}}</div>
    <div class="created-at">at {{this.createdAt}}</div>
  </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>